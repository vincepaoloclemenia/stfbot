                    <%= react_component 'User' %>
                </div>
            </div>

            <div class='row pb15'>
                <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
                    
                    <%= react_component 'WorkExperienceContainer' %>
                                   
                </div>
            </div>

            <div class='row pb15'>
                <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
                    <%= react_component 'EducationsContainer' %>           
                </div>
            </div>
            
            <div class='row pb15'>
                <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
                    
