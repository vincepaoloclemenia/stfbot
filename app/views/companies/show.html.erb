<% if user_signed_in? %>
    <% if current_user.employed? %>
        <%= react_component 'CompanyProfile', { company: @company, currentCompany: current_company?(@company) && current_user.role == 'company_admin' } %>
    <% else %>
        <%= react_component 'CompanyProfile', { company: @company, currentCompany: false } %>
    <% end %>
<% else %>
    <%= react_component 'CompanyProfile', { company: @company, currentCompany: false } %>
<% end %>
                