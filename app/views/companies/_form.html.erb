<div class='row'>
    <div class='col-lg-12'>
        <%= form_for @newCompany do |f| %>
            <div class='row pb20'>
                <div class='col-lg-3'>
                    <%= f.label 'Company Name'.html_safe, class: 'form-label' %>
                </div>
                <div class='col-lg-9'>
                    <%= f.text_field :name, class: 'form-control company-input'%>
                </div>
            </div>
            <div class='row pb20'>
                <div class='col-lg-3'>
                    <%= f.label 'Address', class: 'form-label' %>
                </div>
                <div class='col-lg-9'>
                    <%= f.text_field :address, class: 'form-control company-input'%>
                </div>
            </div>
            <div class='row pb20'>
                <div class='col-lg-3'>
                    <%= f.label 'Contact', class: 'form-label' %>
                </div>
                <div class='col-lg-9'>
                    <%= f.text_field :telefax, class: 'form-control company-input'%>
                </div>
            </div>
            <div class="modal-footer no-border">
                <button type="submit" class="btn btn-primary modal-btn"><%= @newCompany.new_record? ? 'Add Company' : 'Save Changes' %></button>
                <button type="button" class="btn btn-primary modal-cancel" data-dismiss="modal">Cancel</button>
            </div>   
        <% end %> 
    </div>
</div>