<% if admin_signed_in? && !user_signed_in? %>
    <%= render 'layouts/sidebar_admin' %>
<% elsif user_signed_in? && current_user.role == 'applicant' && !admin_signed_in? %>
    <%= render 'layouts/sidebar_jobseeker' %>
<% elsif user_signed_in? && current_user.role == 'employer' && !admin_signed_in? %>
    <%= render 'layouts/sidebar_employer' %>
<% end %>
