<% if admin_signed_in? && !user_signed_in? %>
    <%= render 'layouts/sidebar_admin' %>
<% elsif user_signed_in? && current_user.role == 'applicant' && !admin_signed_in? %>
    <%= render 'layouts/sidebar_jobseeker' %>
<% elsif user_signed_in? && current_user.role == 'finance admin' && !admin_signed_in? %>
    <%= render 'layouts/sidebar_finance_admin' %>
<% elsif user_signed_in? && current_user.role == 'employer' && !admin_signed_in? %>
    <%= render 'layouts/sidebar_employer' %>
<% elsif user_signed_in? && current_user.role == 'company_admin' && !admin_signed_in? %>
    <%= render 'layouts/sidebar_company_admin' %>
<% elsif user_signed_in? && current_user.role == 'contractor' && !admin_signed_in? %>
    <%= render 'layouts/sidebar_contractor' %>
<% end %>
