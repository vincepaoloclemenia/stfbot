<div class="row m70">
  <div class="col-xs-8 col-sm-8 col-md-6 col-lg-4 col-xs-offset-2 col-sm-offset-2 col-md-offset-3 col-lg-offset-4">
    <div class="devise-form">

      <div class="row pt20">
        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group pd5">  
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: 'form-control login' %>
            </div>

            <div class="form-group">  
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control login' %>
            </div>

            <% if devise_mapping.rememberable? -%>
              
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: 'remember' %>
              <%#= link_to 'Forgot password?', new_user_confirmation_path(resource_name), class: 'forgot-password' %>
              <%= link_to 'Forgot password?', root_path, class: 'forgot-password' %>
            <% end -%>

            <div class="form-group pd5">  
              <div class="actions">
                <%= f.submit "Login", class: 'btn btn-primary btn-login' %>
              </div>
            </div>


          <% end %>
        </div>
      </div>

      <div class="row text-center">
        <div class="col-lg-8 col-lg-offset-2">
            <p class="account-exist">
                Don't have an account yet? <%= link_to "Sign up", register_path, class: 'login-link' %>.
            </p>
        </div>
      </div>
    </div>
  </div>
</div>
